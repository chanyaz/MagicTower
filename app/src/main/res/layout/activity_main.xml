<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/darker_gray"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alan.magictower.MainActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_hero_icon"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:padding="2dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:id="@+id/tv_hero_life"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/iv_hero_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatTextView
        android:padding="2dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:id="@+id/tv_hero_attack"
        android:layout_toEndOf="@id/iv_hero_icon"
        android:layout_below="@id/tv_hero_life"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatTextView
        android:padding="2dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:id="@+id/tv_hero_defense"
        android:layout_toEndOf="@id/iv_hero_icon"
        android:layout_below="@id/tv_hero_attack"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:padding="2dp"
        android:id="@+id/tv_hero_key_yellow"
        android:textSize="15sp"
        android:textColor="@color/yellow"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/tv_hero_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:padding="2dp"
        android:id="@+id/tv_hero_key_blue"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/tv_hero_life"
        android:layout_below="@id/tv_hero_key_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:padding="2dp"
        android:id="@+id/tv_hero_key_red"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/tv_hero_life"
        android:layout_below="@id/tv_hero_key_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.alan.magictower.view.GamePanel
        android:id="@+id/gamePanel"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.AppCompatTextView
        android:textSize="25sp"
        android:text="Round 1"
        android:textColor="@color/red"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_below="@id/gamePanel"
        android:id="@+id/tv_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
